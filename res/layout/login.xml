<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <!-- Screen Design for Photos -->

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="482dp" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_x="118dp"
            android:layout_y="114dp"
            android:ems="10" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_x="118dp"
            android:layout_y="182dp"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="8dp"
            android:layout_y="120dp"
            android:text="User name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="8dp"
            android:layout_y="190dp"
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:text="Welcome! Please login to access the network!"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="8dp"
            android:layout_y="270dp"
            android:text="Remember User name and password" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="8dp"
            android:layout_y="304dp"
            android:text="Forget User name and password" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="105dp"
            android:layout_y="355dp"
            android:text="Submit" />

    </AbsoluteLayout>
    
</LinearLayout>
